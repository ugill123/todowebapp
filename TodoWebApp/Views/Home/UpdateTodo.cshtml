@model Todo
@{
    ViewBag.Title = "Update a Todo";
}

<h2>Update a Todo <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input class="form-control" asp-for="Id" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Iscompleted"></label>
        <input type="checkbox" name="checkThis" asp-for="Iscompleted">

        @* <input class="form-control" asp-for="Iscompleted"/> *@
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

