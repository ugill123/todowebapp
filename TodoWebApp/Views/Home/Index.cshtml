@model IEnumerable<Todo>

@{
    ViewData["Title"] = "Todo APP";
}

<h2>Todo List</h2>
<a asp-action="AddTodo" class="btn btn-sm btn-primary">Add Todo</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Task</th>
            <th>Completed</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.Name</td>
                    <td>@r.Iscompleted</td>

                    
                    <td>
                        <a asp-action="UpdateTodo" asp-route-id="@r.Id">
                            <img src="/icon/edit.png" />
                        </a>
                    </td>
                    <td>
                        <form asp-action="DeleteTodo" method="post">
                            <input type="hidden" value="@r.Id" name="todoId" />
                            <input type="image" src="/icon/close.png" />
                        </form>
                    </td>
                </tr>
        }
    </tbody>
</table>